name:                software-testing
version:             0.1.0.0
synopsis:            Exercises and project of the course "Software Testing" from the MSc Software Engineering at UvA.
-- description:
homepage:            https://github.com/Gurrt/software-testing
license:             MIT
license-file:        LICENSE

-- copyright:
-- category:
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  -- exposed-modules:
  -- other-modules:
  -- other-extensions:
  build-depends:        base >=4.8 && <4.9,
                        hspec >= 1.8,
                        random >= 1.1
  -- hs-source-dirs:
  default-language:    Haskell2010

executable week-1-ex-1
    ghc-options: -Wall
    hs-source-dirs: week-1
    main-is: HW01Tests.hs
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec >= 1.8

executable week-1-ex-2
   ghc-options: -Wall
   hs-source-dirs: week-1
   main-is: CSI.hs
   default-extensions: ExistentialQuantification,
                       OverloadedStrings
   build-depends: base,
                  hspec >= 1.8

executable week-2
    ghc-options: -Wall
    hs-source-dirs: week-2
    main-is: Lab2Tests.hs
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec >= 1.8,
                   QuickCheck

executable week-3
    ghc-options: -Wall
    hs-source-dirs: week-3
    main-is: Lab3.hs
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec,
                   random
