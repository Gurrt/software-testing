name:                software-testing
version:             0.5.0.0
category:            Testing
maintainer:          Alberto Martinez de Murga
synopsis:            Project repository.
description:         Exercises and project of the course "Software Testing" from the MSc Software Engineering at UvA.
-- description:
homepage:            https://github.com/Gurrt/software-testing
license:             MIT
license-file:        LICENSE

-- copyright:
-- category:
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

source-repository head
  type: git 
  location: https://github.com/Gurrt/software-testing/

library
  -- exposed-modules:
  -- other-modules:
  -- other-extensions:
  build-depends:        base >=4.8 && <4.9,
                        hspec >= 1.8,
                        random >= 1.1
  -- hs-source-dirs:
  default-language:    Haskell2010

executable week-1-ex-1
    ghc-options: -Wall
    hs-source-dirs: week-1
    main-is: HW01Tests.hs 
    default-language: Haskell2010
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec >= 1.8

executable week-1-ex-2
   ghc-options: -Wall
   hs-source-dirs: week-1
   main-is: CSI.hs
   default-language: Haskell2010
   default-extensions: ExistentialQuantification,
                       OverloadedStrings
   build-depends: base,
                  hspec >= 1.8

executable week-2
    ghc-options: -Wall
    hs-source-dirs: week-2
    main-is: Lab2Tests.hs 
    default-language: Haskell2010    
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec >= 1.8,
                   QuickCheck

executable week-3
    ghc-options: -Wall
    hs-source-dirs: week-3
    main-is: Lab3.hs 
    default-language: Haskell2010    
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   hspec,
                   random 

executable week-4
    ghc-options: -Wall
    hs-source-dirs: week-4
    main-is: Lab4.hs 
    default-language: Haskell2010    
    default-extensions: ExistentialQuantification,
                        OverloadedStrings,
                        ParallelListComp,
                        TypeSynonymInstances,
                        FlexibleInstances
    build-depends: base,
                   QuickCheck,
                   random

executable week-5
    ghc-options: -Wall
    hs-source-dirs: week-5
    main-is: Lab5.hs  
    default-language: Haskell2010
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   random

executable week-6
    ghc-options: -Wall
    hs-source-dirs: week-6
    main-is: Lab6.hs
    default-language: Haskell2010
    default-extensions: ExistentialQuantification,
                        OverloadedStrings
    build-depends: base,
                   random
